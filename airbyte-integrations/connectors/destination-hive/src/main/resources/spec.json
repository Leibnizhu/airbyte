{
  "documentationUrl" : "https://docs.airbyte.com/integrations/destinations/hive",
  "supportsIncremental" : true,
  "supportsNormalization" : false,
  "supportsDBT" : false,
  "supported_destination_sync_modes" : [
    "overwrite",
    "append"
  ],
  "connectionSpecification" : {
    "$schema" : "http://json-schema.org/draft-07/schema#",
    "title" : "Hive Destination Spec",
    "type" : "object",
    "required" : [
      "host",
      "port",
      "database"
    ],
    "properties" : {
      "host" : {
        "description" : "Host Endpoint of the Hive Cluster",
        "type" : "string",
        "title" : "Host",
        "order" : 1
      },
      "port" : {
        "description" : "Port of the database.",
        "type" : "integer",
        "minimum" : 0,
        "maximum" : 65536,
        "default" : 10000,
        "examples" : [
          "10000"
        ],
        "title" : "Port",
        "order" : 2
      },
      "database" : {
        "description" : "Name of the database.",
        "type" : "string",
        "title" : "Database",
        "order" : 3
      },
      "username" : {
        "description" : "Username to use to access the database.",
        "type" : "string",
        "title" : "Username",
        "order" : 4
      },
      "password" : {
        "description" : "Password associated with the username.",
        "type" : "string",
        "airbyte_secret" : true,
        "title" : "Password",
        "order" : 5
      },
      "jdbc_url_params" : {
        "title" : "JDBC URL params",
        "description" : "Additional properties to pass to the JDBC URL string when connecting to the database formatted as 'key=value' pairs separated by the symbol '&'. (example: key1=value1&key2=value2&key3=value3).",
        "type" : "string",
        "order" : 6
      },
      "file_format" : {
        "title" : "File storage format",
        "type" : "string",
        "default" : "Parquet",
        "description" : "",
        "enum" : [
          "TextFile",
          "Parquet",
          "Avro",
          "Orc"
        ],
        "order" : 7
      },
      "auto_merge" : {
        "title" : "Auto merge data files",
        "description" : "Auto compact data files when stream close",
        "type" : "boolean",
        "default" : false,
        "order" : 8
      },
      "auto_merge_params" : {
        "title" : "Auto merge params",
        "description" : "Additional properties to pass to the Hive session when connecting to the database formatted as 'key=value' pairs separated by the symbol '&'. (example: key1=value1&key2=value2&key3=value3, execute: SET key1=value1; SET key2=value2; SET key3=value3; ).",
        "type" : "string",
        "examples" : "hive.merge.mapfiles=true&hive.merge.mapredfiles=true&hive.merge.size.per.task=256000000&hive.merge.smallfiles.avgsize=13421772",
        "order" : 9
      }
    }
  }
}
